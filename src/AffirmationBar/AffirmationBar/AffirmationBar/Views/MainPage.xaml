<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AffirmationBar"
             x:Class="AffirmationBar.Views.MainPage"
             xmlns:cv="clr-namespace:AffirmationBar.Converters"
             Title="Бар за уверения">

    <ContentPage.Resources>
        <ResourceDictionary>
            <cv:InverseBoolConverter x:Key="InverseBool" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid Padding="10">
        <StackLayout>
            <Label Text="Поребителско име" />
            <Entry Text="{Binding Username}" />

            <Label Text="Парола" />
            <Entry Text="{Binding Password}" IsPassword="True" />

            <Button Text="Влизане" Clicked="OnLoginClicked" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBool}}"/>
            <ActivityIndicator IsEnabled="{Binding IsLoading}" IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />
        </StackLayout>

        <StackLayout VerticalOptions="End">
            <Label Text="Това приложение е open source." HorizontalOptions="Center" />
            <Label HorizontalOptions="Center" Text="http://github.com/betrakiss/SUSI-API-v2" TextColor="DodgerBlue" />
        </StackLayout>
    </Grid>

</ContentPage>
    