<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AffirmationBar.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="AsocPrimary">#D0D494</Color>
            <Color x:Key="AsocSecondary">#F9FCD0</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#E8EBB6"/>
                <Setter Property="BarTextColor" Value="#ACB165"/>
            </Style>
        </ResourceDictionary>
	</Application.Resources>
</Application>