<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AffirmationBar.Views.CertificateOptionsPage">

        <StackLayout Padding="10">
            <Label Text="{Binding FirstName, StringFormat='Здравей {0}!'}" />

            <Label Text="Избери причина за уверението:" />
            <Picker ItemsSource="{Binding Reasons}" SelectedItem="{Binding Selected}" />

            <Button Text="Генерирай уверение" />
        </StackLayout>
</ContentPage>
    