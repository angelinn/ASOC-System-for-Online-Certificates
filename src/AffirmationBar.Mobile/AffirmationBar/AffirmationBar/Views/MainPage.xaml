<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AffirmationBar"
             x:Class="AffirmationBar.Views.MainPage"
             xmlns:cv="clr-namespace:AffirmationBar.Converters"
             Title="Бар за уверения">

    <ContentPage.Resources>
        <ResourceDictionary>
            <cv:InverseBoolConverter x:Key="InverseBool" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="10">
        <StackLayout>
            <Label Text="Потребителско име" />
            <Entry Text="{Binding Username}" />

            <Label Text="Парола" />
            <Entry Text="{Binding Password}" IsPassword="True" Completed="OnPasswordCompleted" />

            <Button Text="Влизане" Clicked="OnLoginClicked" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBool}}"/>
            <ActivityIndicator IsEnabled="{Binding IsLoading}" IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />
        </StackLayout>

        <Label VerticalOptions="End" Text="Това приложение е open source." TextColor="DodgerBlue" HorizontalOptions="Center" />
    </Grid>

</ContentPage>
    