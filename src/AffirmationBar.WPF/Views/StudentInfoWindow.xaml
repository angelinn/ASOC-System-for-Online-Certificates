<Window x:Class="AffirmationBar.WPF.Views.StudentInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="StudentInfoWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Име на факултет: " />
            <Label Content="{Binding FacultyName}" />

            <Label Content="Име на студент: " />
            <Label Content="{Binding Names}" />

            <Label Content="ЕГН: " />
            <Label Content="{Binding EGN}" />

            <Label Content="Град: " />
            <Label Content="{Binding City}" />

            <Label Content="Област: " />
            <Label Content="{Binding Region}" />

            <Label Content="Форма на обучение: " />
            <Label Content="{Binding FormOfEducation}" />

            <Label Content="Пол: " />
            <Label Content="{Binding Gender}" />

            <Label Content="Семестър: " />
            <Label Content="{Binding Semester}" />

            <!--<Label Content="Година: " />
            <Label Content="{Binding Year}" />-->

            <Label Content="Степен: " />
            <Label Content="{Binding Degree}" />

            <Label Content="Специалност: " />
            <Label Content="{Binding Program}" />

            <Label Content="ФН: " />
            <Label Content="{Binding FacultyNumber}" />

            <Label Content="Причина: " />
            <Label Content="{Binding Reason}" />

        </StackPanel>
    </Grid>
</Window>
