<Window x:Class="AffirmationBar.WPF.Views.StudentInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="StudentInfoWindow" Height="300" Width="300">
    <Grid>
		<StackPanel>
            <Label Content="Име: " />
            <Label Content="{Binding FacultyName}" />

            <Label Content="Форма на обучение: " />
            <Label Content="{Binding FormOfEducation}" />
            
            <Label Content="ЕГН: " />
            <Label Content="{Binding Egn}" />

			<Label Content="Град: " />
			<Label Content="{Binding City}" />
            
			<Label Content="Област " />
			<Label Content="{Binding Region}" />

		</StackPanel>
	</Grid>
</Window>
